//1. Дано целое число N (> 0). Сформировать и вывести целочисленный массив размера N, содержащий N первых положительных нечетных чисел: 1, 3, 5, . . . .
#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    int a[100];
    int n;
    cout << "vvedite massiv => ";
    cin >> n;
    for (int i=0; i<n; i++)
        a[i] = 1 + i*2;
    for (int i=0; i<n; ++i)
        cout << "a[" << i+1 << "] = " << a[i] << endl;
    return 0;
}

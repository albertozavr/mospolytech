//Задание к теме 6.

// 1. Поменять местами содержимое переменных A и B и вывести новые значения A и B.

#include <iostream>
using namespace std;
main()
{
	int a,b,c;
	cout <<"vvedite a & b chtobi pomenyat ih mestami"<<"\na=";
	cin>>a;
	cout<<"b=";
	cin>>b;
	c=a;
	a=b;
	b=c;
	cout<<"a="<<a<<"\nb="<<b;
	return 0;
}

// 2. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C.

#include <iostream>
using namespace std;
main()
{
	int a,b,c,d;
	cout <<"vvedite a & b & c chtobi pomenyat ih mestami"<<"\na=";
	cin>>a;
	cout<<"b=";
	cin>>b;
	cout<<"c=";
	cin>>c;
	d=b;
	b=a;
	a=c;
	c=d;
	cout<<"a="<<a<<"\nb="<<b<<"\nc="<<c;
	return 0;
}


// 3. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в C, C — в B, B — в A, и вывести новые значения переменных A, B, C.

#include <iostream>
using namespace std;
main()
{
	int a,b,c,d;
	cout <<"vvedite a & b & c chtobi pomenyat ih mestami"<<"\na=";
	cin>>a;
	cout<<"b=";
	cin>>b;
	cout<<"c=";
	cin>>c;
	d=b;
	b=c;
	c=a;
	a=d;

	cout<<"a="<<a<<"\nb="<<b<<"\nc="<<c;
	return 0;
}


// 4. Найти значение функции y = 3x^6 − 6x^2 − 7 при данном значении 

#include <iostream>
#include <math.h>
using namespace std;
main()
{
	int x,y;
	cout <<"vvedite x chtobi naiti y=3x^6 - 6x^2 - 7 "<<"\nx=";
	cin>>x;
	y=(3*pow(x,6))-(6*pow(x,2))-7;
	cout<<"y="<<y;
	return 0;
}


// 5. Найти значение функции y = 4(x−3)6 − 7(x−3)3 + 2 при данном значении x


#include <iostream>
#include <math.h>
using namespace std;
main()
{
	int x,y;
	cout <<"vvedite x chtobi naiti y=4(x-3)^6 - 7(x-3)^3 + 2 "<<"\nx=";
	cin>>x;
	y=(4*pow(x-3,6))-(7*pow(x-3,2))+2;
	cout<<"y="<<y;
	return 0;
}

//  6. Дано число A. Вычислить A8 , используя вспомогательную переменную и три операции умножения.


#include <iostream>
using namespace std;
main()
{
	int x,y;
	cout <<"vvedite A chtobi naiti A^8 "<<"\nx=";
	cin>>x;
	y=x*x;
	y=y*y;
	y=y*y;
	cout<<"y="<<y;
	return 0;
}



// 7. Дано число A. Вычислить A15, используя две вспомогательные переменные и пять операций умножения.



#include <iostream>
using namespace std;
main()
{
	float x,y,z;
	cout <<"vvedite A chtobi naiti A^15 "<<"\nx=";
	cin>>x;
	y=x*x;
	y=y*y;
	y=y*y;
	z=y*(1/x);
	z=z*y;
	cout<<"z="<<z;
	return 0;
}
